xml.instruct!

xml.rss "version" => "2.0", "xmlns:dc" => "http://purl.org/dc/elements/1.1/" do
 xml.channel do

   xml.title       "programistok.herokuapp.com Spotkanie"
   xml.link        url_for :only_path => false, :controller => 'meetings'
   xml.description "programistok.herokuapp.com Spotkanie"

   @meetings.each do |meeting|
     xml.item do
       xml.title       meeting.title
       xml.link        url_for :only_path => false, :controller => 'meetings', :action => 'show', :id => meeting.id
       xml.description meeting.content
       xml.guid        url_for :only_path => false, :controller => 'meetings', :action => 'show', :id => meeting.id
     end
   end

 end
end
