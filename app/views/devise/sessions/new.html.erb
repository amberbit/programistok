<h2>Zaloguj</h2>

<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>

  <div class="clearfix field"><%= f.label :email %>
  <%= f.email_field :email, :class=>"span6" %></div>

  <div class="clearfix field"><%= f.label :password %>
  <%= f.password_field :password, :class=>"span6" %></div>

  <% if devise_mapping.rememberable? -%>
    <div class="clearfix field"><%= f.check_box :remember_me %>
    <%= f.label :remember_me %></div>
  <% end -%>

  <div class="clearfix actions"><%= f.submit "Zaloguj", :class=>"btn" %></div>
<% end %>

<%= render :partial => "devise/shared/links" %>
